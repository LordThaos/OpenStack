{% extends "::layout.html.twig" %}

{% block title %}
    Commande - {{ parent() }}
{% endblock %}

{% block body %}
    
<div class="row">
    <div class="box">
        <div class="col-lg-12">
            <hr>
            <h2 class="intro-text text-center">Liste des produits</h2>
            <hr>

            <p>
                {% for message in app.session.flashbag.get('info') %}
                <p>{{ message }}</p>
                {% endfor %}
            </p>

            <table class="table table-striped">
                <thead>
                    <th>Nom</th>
                    <th>Description</th>
                    <th>Prix</th>
                </thead>

                <tbody>
                    {% for produit in listeProduits %}
                        <tr>
                            <td>{{ produit.nom }}</td>
                            <td>{{ produit.description }}</td>
                            <td>{{ produit.prix }}</td>

                        </tr>

                    {% else %}
                        <tr>
                            <td colspan="4">Aucun produit</td>
                        </tr>
                    {% endfor %}

                </tbody>
            </table>
            {% if is_granted('ROLE_USER') %}
            <p><a href="{{ path('openstack_commande_commande') }}">Passer une commande</a></p>
            {% endif %}
            
        </div>
    </div>
</div>
    
{% endblock %}

{% block javascripts %}
{% endblock %}