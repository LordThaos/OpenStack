{% extends "::layout.html.twig" %}

{% block title %}
    Accueil - {{ parent() }}
{% endblock %}

{% block body %}
    
<div class="row">
    <div class="box">
        <div class="col-lg-12">
            <hr>
            <h2 class="intro-text text-center">Page d'accueil</h2>
            <hr>

            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
            <p>Bienvenue {{ app.user.username }} !</p>
            {% else %}
            <p>Bienvenue invité !</p>
            {% endif %}
                
                    
                    
            <div class="vitrine">
                <hr>
                <h2 class="intro-text text-center">Vitrine</h2>
                <hr>

                {% if listeProduits != null %} 
                    {% for produit in listeProduits %}
                    <div class="bloc center">
                        <p><b>{{ produit.nom }}</b></p>
                        <p>{{ produit.description }}</p>
                        <p>{{ produit.prix }} €</p>
                    </div>
                    {% endfor %}
                {% else %}
                    <p>Aucun article disponible !</p>
                {% endif %}
            </div>
                
        </div>
    </div>
</div>
    
{% endblock %}

{% block javascripts %}
{% endblock %}